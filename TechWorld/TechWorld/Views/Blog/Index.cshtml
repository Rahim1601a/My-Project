@model TechWorld.Models.CustomModel
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!--Start breadcrumb area-->
<section class="breadcrumb-area style2" style="background-image: url(../../Content/images/resources/breadcrumb-bg-2.jpg);">
    <div class="container">
        <div class="row">
            <div class="col-xl-12">
                <div class="inner-content-box clearfix">
                    <div class="title-s2 text-center">
                        <span>Blog Default</span>
                        <h1>The (r)Evolution of Media</h1>
                    </div>
                    <div class="breadcrumb-menu float-right">
                        <ul class="clearfix">
                            <li><a href="@Url.Action("Index", "Home")">HOME</a></li>
                            <li class="active">BLOG</li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<!--End breadcrumb area-->
<!--Start blog area-->
<section id="blog-area" class="blog-default-area">
    <div class="container">
        <div class="row">
            @{
                string path = System.Configuration.ConfigurationManager.AppSettings["ContentImages"];
                foreach (var item in Model.blogModel)
                {

                <div class="col-xl-4 col-lg-4 col-md-12 col-sm-12">
                    <div class="single-blog-colum-style1">
                        <!--Start single blog post-->
                        <div class="single-blog-post style3 wow fadeInLeft" data-wow-delay="0ms" data-wow-duration="1500ms">
                            <div class="img-holder">
                                <img src="@Url.Content(path + item.Image)" alt="Awesome Image">
                                <div class="overlay-style-two"></div>
                                <div class="overlay">
                                    <div class="box">
                                        <div class="post-date">
                                            <h3>@item.Month <br><span>@item.Day</span></h3>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="text-holder">
                                <h3 class="blog-title"><a href="blog-single.html">@item.Tittle</a></h3>
                                <div class="meta-box">
                                    <ul class="meta-info">
                                        <li>By <a href="#">@item.CreateBy</a></li>                                        
                                    </ul>
                                </div>
                                <div class="text">
                                    <p>@item.BlogContent</p>
                                    <a class="btn-two" href="blog-single.html">Read More<span class="flaticon-next"></span></a>
                                </div>
                            </div>
                        </div>
                        <!--End single blog post-->
                    </div>
                </div>
                    }
                }
        </div>
    </div>
</section>
<!--End blog area-->
